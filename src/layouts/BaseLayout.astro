---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Triz Blog",
  description = "Notes on engineering, tools, and learning in public."
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/">Triz Blog</a>
        <nav class="nav-links" aria-label="Main navigation">
          <a href="/">Home</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>
    <main class="container main-content">
      <slot />
    </main>
    <footer class="container site-footer">Built with Astro</footer>
  </body>
</html>
