---
import { getEntry, render } from "astro:content";
import PostLayout from "../../layouts/PostLayout.astro";
import { toCategorySlug } from "../../lib/categories";

const welcomeIntro = await getEntry("welcome", "index");

if (!welcomeIntro) {
  throw new Error("Missing required content file: src/content/welcome/index.md");
}

const { Content } = await render(welcomeIntro);

const formattedDate = new Intl.DateTimeFormat("en-CA", {
  year: "numeric",
  month: "short",
  day: "2-digit"
}).format(welcomeIntro.data.date);
---

<PostLayout title={welcomeIntro.data.title} description={welcomeIntro.data.description}>
  <header class="article-header">
    <p class="meta-row">
      <span class="meta-type">Welcome</span>
      <span class="meta">{formattedDate}</span>
    </p>
    <h1>{welcomeIntro.data.title}</h1>
    {welcomeIntro.data.categories.length > 0 && (
      <p class="badges">
        {welcomeIntro.data.categories.map((category) => (
          <a class="badge badge-link" href={`/categories/${toCategorySlug(category)}/`}>
            {category}
          </a>
        ))}
      </p>
    )}
  </header>
  <Content />
</PostLayout>
